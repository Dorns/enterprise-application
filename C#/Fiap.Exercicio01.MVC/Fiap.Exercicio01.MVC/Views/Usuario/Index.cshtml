@{
    ViewBag.Title = "Index";
}

<h2>Cadastro de Usuario</h2>

<div>
    <form method="post" action="/Usuario/Gravar">
        <div>
            <label for="nome">Nome</label>
            <input type="text" value="" id="id-nome" name="nome" class="form-control"/>
        </div>
        <div>
            <label for="idade">Idade</label>
            <input type="text" value="" id="id-idade" name="idade" class="form-control"/>
        </div>
        <div>
            <label for="email">Email</label>
            <input type="email" value="" id="id-email" name="email" class="form-control"/>
        </div>
        <div>
            <input type="submit" value="Gravar" class="btn btn-primary"/>
        </div>
    </form>
</div>

